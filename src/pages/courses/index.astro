---
import Layout from "../../components/layout/Layout.astro";
import { pageSchemas } from "../../schemas";
import { TTC_COURSES_DATA, type TTCPageData } from "../../constants/ttcPageConstants";

// Get all course data
const courses = Object.values(TTC_COURSES_DATA);

// Generate schemas for courses listing page
const coursesSchemas = pageSchemas.courses();
---

<Layout
  title="Yoga Teacher Training Courses in Rishikesh | Hatha Yogashram"
  description="Explore our comprehensive Yoga Teacher Training courses in Rishikesh. Choose from 100, 200, 300, and 500-hour Yoga Alliance certified programs with authentic Indian masters."
  canonical="https://hathayogashram.com/courses/"
  image="https://hathayogashram.com/yogacoursepic.jpg"
  additionalSchemas={coursesSchemas}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-orange-900 via-orange-800 to-orange-700 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Yoga Teacher Training Courses
      </h1>
      <p class="text-xl text-orange-100 mb-8 max-w-3xl mx-auto">
        Transform your practice and become a certified yoga teacher with our authentic, traditional programs
      </p>
      
      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto text-white">
        <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg">
          <div class="text-2xl font-bold mb-1">25+</div>
          <div class="text-orange-200 text-sm">Years Experience</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg">
          <div class="text-2xl font-bold mb-1">500+</div>
          <div class="text-orange-200 text-sm">Certified Teachers</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg">
          <div class="text-2xl font-bold mb-1">Yoga Alliance</div>
          <div class="text-orange-200 text-sm">RYS Certified</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Courses Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-1 gap-8">
          {courses.map((course) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class="md:flex">
                <!-- Course Image -->
                <div class="md:w-1/3">
                  <div class="h-64 md:h-full bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center">
                    <div class="text-center text-white">
                      <div class="text-4xl font-bold mb-2">{course.courseInfo.hours}</div>
                      <div class="text-xl">Hour Course</div>
                      <div class="text-sm opacity-75 mt-2">{course.courseInfo.duration}</div>
                    </div>
                  </div>
                </div>
                
                <!-- Course Content -->
                <div class="md:w-2/3 p-8">
                  <div class="flex items-start justify-between mb-4">
                    <div>
                      <span class="inline-block bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm font-semibold mb-2">
                        {course.courseInfo.certification}
                      </span>
                      <h2 class="text-2xl font-bold text-gray-900 mb-2">
                        {course.courseInfo.title}
                      </h2>
                      <p class="text-gray-600 mb-4">{course.courseInfo.overview.substring(0, 150)}...</p>
                    </div>
                    <div class="text-right ml-4">
                      <div class="text-2xl font-bold text-orange-600 mb-1">
                        ${course.courseInfo.accommodation.sharedRoom.price}
                      </div>
                      <div class="text-sm text-gray-500">From USD</div>
                    </div>
                  </div>
                  
                  <!-- Course Highlights -->
                  <div class="grid md:grid-cols-2 gap-4 mb-6">
                    <div>
                      <h4 class="font-semibold text-gray-800 mb-2">Course Highlights:</h4>
                      <ul class="text-sm text-gray-600 space-y-1">
                        {course.courseInfo.highlights.slice(0, 3).map((highlight) => (
                          <li class="flex items-center gap-2">
                            <svg class="w-3 h-3 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            {highlight}
                          </li>
                        ))}
                      </ul>
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-800 mb-2">Yoga Styles:</h4>
                      <div class="flex flex-wrap gap-2">
                        {course.courseInfo.style.map((style) => (
                          <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
                            {style}
                          </span>
                        ))}
                      </div>
                      <div class="mt-3">
                        <span class="text-sm text-gray-600">Level: </span>
                        <span class="text-sm font-medium text-gray-800">{course.courseInfo.level}</span>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Action Buttons -->
                  <div class="flex flex-col sm:flex-row gap-3">
                    <a 
                      href="/courses/200-hour-yoga-teacher-training-rishikesh"
                      class="flex-1 bg-orange-600 hover:bg-orange-700 text-white text-center py-3 px-6 rounded-lg font-semibold transition-colors"
                    >
                      View Details & Book
                    </a>
                    <a 
                      href="/courses/200-hour-yoga-teacher-training-rishikesh#syllabus"
                      class="flex-1 border border-orange-600 text-orange-600 hover:bg-orange-50 text-center py-3 px-6 rounded-lg font-semibold transition-colors"
                    >
                      View Syllabus
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
          Why Choose Hatha Yogashram?
        </h2>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Authentic Tradition</h3>
            <p class="text-gray-600">Learn from traditional Indian masters with decades of experience in classical yoga practices.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Small Class Sizes</h3>
            <p class="text-gray-600">Maximum 15 students per class ensuring personalized attention and proper guidance for each student.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">All-Inclusive</h3>
            <p class="text-gray-600">Accommodation, meals, course materials, and certification included in one transparent price.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
