---
import Layout from '$components/layout/Layout.astro';
import { ROUTE_CONTACT } from '$constants/routesConstants';
import {
  PRICE_TAB_DATA,
  TTC_NAVBAR_DATA,
  TRAINING_200_TITLE,
  TRAINING_200_DETAILS,
  TRAINING_200_FEES,
  TRAINING_200_CAROUSEL_IMAGES,
  TRAINING_200_COURSE_HIGHLIGHTS,
  TRAINING_200_COURSE_FAQ_SECTION,
  TRAINING_200_COURSE_FAQ_STYLES,
  GALLERY_CAROUSEL_IMAGES,
  TRAINING_200_INCLUDED_EXCLUDED_SECTION,
  MINI_CAROUSEL_IMAGES,
  TRAINING_200_CURRICULUM_SECTION,
  TRAINING_200_EXCURSIONS_SECTION,
  TTC_COURSE_GAIN_SECTION,
  TRAINING_200_RULES_SECTION,
  TRAINING_200_PRACTICAL_SESSIONS,
  TRAINING_200_FOOD_SECTION,
  TRAINING_200_COURSE_TIMELINE_SECTION,
  TRAINING_200_ACCOMMODATION_SECTION,
  TRAINING_200_COURSE_COMBO_SECTION,
  TRAINING_200_DAILY_SCHEDULE_SECTION_DATA,
  TRAINING_200_BEST_COURSE_SECTION,
} from '$constants/TTC/200hour';
import { FaqSection } from '$components/svelte';
import {
  TTCHeroSection,
  TTCDailyScheduleSection,
  TTCDatesSection,
  TTCourseHighlightsSection,
  TTCPriceTab,
  TTCNavbarTab,
  TTCGuideIndia,
  TTCExcursionsSection,
  TTC_CurriculumSection,
  TTC_CourseGain,
  TTC_Certificate,
  TTCPracticalSession,
  TTCRules,
  TTCFood,
  TTC_CourseTimeline,
  TTCAccommodation,
  TTC_CourseCombo,
  TTCBlogs,
  TTC_BestCourse,
} from '$components/sections/TTC';
import {
  LocationSection,
  GallerySection,
  YogaAllianceRegisteredSchool,
  TeacherSection,
} from '$components/sections';
import IncludedExcludedSection from '$svelte/ui/IncludedExcludedSection.svelte';
import { TEACHERS_SECTION } from '$constants/index';
---

<Layout
  canonical="https://hathayogashram.com/"
  description="Join authentic 200/300 hour Yoga Teacher Training in Rishikesh with Hatha Yogashram. Yoga Alliance RYS certified residential courses with Indian masters. Traditional Hatha & Ashtanga Yoga, Sanskrit mantras, philosophy from ancient texts."
  image="https://hathayogashram.com/yogaschoolpic.jpg"
  title="Best 200 Hour Yoga Teacher Training in Rishikesh, India - Hatha Yogashram"
>
  <!-- Training 200 Section -->
  <TTCHeroSection
    contactRoute={ROUTE_CONTACT}
    details={TRAINING_200_DETAILS}
    fees={TRAINING_200_FEES}
    images={TRAINING_200_CAROUSEL_IMAGES}
    title={TRAINING_200_TITLE}
  />

  <!-- Sticky Navigation Bar -->
  <TTCNavbarTab navbarData={TTC_NAVBAR_DATA} />

  <!-- Best Course Section -->
  <TTC_BestCourse sectionData={TRAINING_200_BEST_COURSE_SECTION} />

  <!-- Course Gain Section -->
  <TTC_CourseGain courseGainData={TTC_COURSE_GAIN_SECTION} />

  <TTC_CourseTimeline timelineData={TRAINING_200_COURSE_TIMELINE_SECTION} />

  <!-- Daily Schedule Section -->
  <TTCDailyScheduleSection sectionData={TRAINING_200_DAILY_SCHEDULE_SECTION_DATA} />

  <TTCourseHighlightsSection sectionData={TRAINING_200_COURSE_HIGHLIGHTS} />

  <!-- Dates Section -->
  <TTCDatesSection />
  <IncludedExcludedSection client:load section={TRAINING_200_INCLUDED_EXCLUDED_SECTION} />
  <TTCExcursionsSection section={TRAINING_200_EXCURSIONS_SECTION} />
  <TTC_CurriculumSection curriculumData={TRAINING_200_CURRICULUM_SECTION} />

  <TTCAccommodation accommodationData={TRAINING_200_ACCOMMODATION_SECTION} />

  <!-- Food Section -->

  <TTCFood foodData={TRAINING_200_FOOD_SECTION} />

  <TeacherSection teachersData={TEACHERS_SECTION} />

  <TTCGuideIndia />

  <YogaAllianceRegisteredSchool />

  <TTCPracticalSession practicalSessionData={TRAINING_200_PRACTICAL_SESSIONS} />

  <TTCRules rulesData={TRAINING_200_RULES_SECTION} />

  <TTC_Certificate />

  <!-- Gallery Section with Infinite Carousels -->
  <GallerySection
    galleryImages={GALLERY_CAROUSEL_IMAGES}
    id="Gallery"
    miniImages={MINI_CAROUSEL_IMAGES}
    showMiniCarousel={true}
  />

  <TTCBlogs />

  <TTC_CourseCombo
    backgroundClass="py-20 bg-custom-gradient"
    comboData={TRAINING_200_COURSE_COMBO_SECTION}
    containerClass="max-w-6xl mx-auto px-6"
  />

  <FaqSection
    client:load
    sectionData={TRAINING_200_COURSE_FAQ_SECTION}
    styles={TRAINING_200_COURSE_FAQ_STYLES}
  />

  <LocationSection />

  <TTCPriceTab data={PRICE_TAB_DATA} />
</Layout>
