---
// Development Tools Navigation
import Layout from '../components/layout/Layout.astro';
---

<Layout 
  title="Development Tools - Hatha Yogashram"
  description="Development and testing tools for Hatha Yogashram website"
  noindex={true}
>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-20">
  <div class="container mx-auto px-4">
    
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">üõ†Ô∏è Development Tools</h1>
      <p class="text-xl text-gray-600">Testing and development utilities for Hatha Yogashram website</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      
      <!-- SEO Constants Showcase -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">üîç</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">SEO Constants</h2>
        <p class="text-gray-600 mb-6">
          Comprehensive showcase of all SEO keywords, constants, and optimization data. 
          Perfect for reviewing keyword coverage and SEO strategy.
        </p>
        <a 
          href="/seo-constants-showcase" 
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition duration-300 inline-block font-semibold"
        >
          View SEO Constants ‚Üí
        </a>
      </div>

      <!-- XML Sitemaps -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">üó∫Ô∏è</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">XML Sitemaps</h2>
        <p class="text-gray-600 mb-6">
          View and test XML sitemaps for SEO optimization including main sitemap, 
          blog sitemap, and location-specific sitemaps.
        </p>
        <div class="space-y-2">
          <a href="/sitemap.xml" target="_blank" class="block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm font-semibold transition">
            Main Sitemap Index
          </a>
          <a href="/main-sitemap.xml" target="_blank" class="block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm font-semibold transition">
            Main Content Sitemap
          </a>
          <a href="/blog-sitemap.xml" target="_blank" class="block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm font-semibold transition">
            Blog Sitemap
          </a>
          <a href="/location-sitemap.xml" target="_blank" class="block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded text-sm font-semibold transition">
            Location Sitemap
          </a>
        </div>
      </div>

      <!-- Schema Testing -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">üèóÔ∏è</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Schema Testing</h2>
        <p class="text-gray-600 mb-6">
          Test structured data schemas and JSON-LD markup with Google's 
          Rich Results Test and Schema Markup Validator.
        </p>
        <div class="space-y-2">
          <a 
            href="https://search.google.com/test/rich-results" 
            target="_blank" 
            class="block bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            Google Rich Results Test
          </a>
          <a 
            href="https://validator.schema.org/" 
            target="_blank" 
            class="block bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            Schema.org Validator
          </a>
        </div>
      </div>

      <!-- Performance Testing -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">‚ö°</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Performance</h2>
        <p class="text-gray-600 mb-6">
          Test website performance, loading speed, and optimization metrics
          with various performance testing tools.
        </p>
        <div class="space-y-2">
          <a 
            href="https://pagespeed.web.dev/" 
            target="_blank" 
            class="block bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            PageSpeed Insights
          </a>
          <a 
            href="https://gtmetrix.com/" 
            target="_blank" 
            class="block bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            GTmetrix
          </a>
        </div>
      </div>

      <!-- SEO Analysis -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">üìä</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">SEO Analysis</h2>
        <p class="text-gray-600 mb-6">
          Analyze SEO performance, keyword rankings, and optimization 
          opportunities with professional SEO tools.
        </p>
        <div class="space-y-2">
          <a 
            href="https://search.google.com/search-console" 
            target="_blank" 
            class="block bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            Google Search Console
          </a>
          <a 
            href="https://www.semrush.com/" 
            target="_blank" 
            class="block bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            SEMrush
          </a>
        </div>
      </div>

      <!-- Example Pages -->
      <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
        <div class="text-4xl mb-4">üìÑ</div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Example Pages</h2>
        <p class="text-gray-600 mb-6">
          View example pages with complete SEO implementation including 
          structured data, meta tags, and international targeting.
        </p>
        <div class="space-y-2">
          <a 
            href="/200-hour-yoga-teacher-training-comprehensive" 
            class="block bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            Comprehensive TTC Page
          </a>
          <a 
            href="/usa/200-hour-yoga-teacher-training" 
            class="block bg-teal-600 hover:bg-teal-700 text-white px-4 py-2 rounded text-sm font-semibold transition"
          >
            USA-Specific TTC Page
          </a>
        </div>
      </div>

    </div>

    <!-- Quick Stats -->
    <div class="mt-16 text-center">
      <div class="bg-white rounded-lg shadow-lg p-8 inline-block">
        <h3 class="text-2xl font-bold text-gray-800 mb-4">SEO Implementation Stats</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <div class="text-3xl font-bold text-blue-600">500+</div>
            <div class="text-gray-600">XML Sitemap URLs</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-green-600">2000+</div>
            <div class="text-gray-600">SEO Keywords</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-purple-600">9</div>
            <div class="text-gray-600">International Markets</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-orange-600">15+</div>
            <div class="text-gray-600">Schema Types</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Back to Site -->
    <div class="text-center mt-12">
      <a 
        href="/" 
        class="bg-gray-800 hover:bg-gray-900 text-white px-8 py-4 rounded-lg text-lg font-semibold transition duration-300 inline-block"
      >
        ‚Üê Back to Main Website
      </a>
    </div>

  </div>
</div>

</Layout>

<style>
  /* Add some hover animations */
  .hover\:shadow-xl:hover {
    transform: translateY(-2px);
  }
  
  /* Print styles */
  @media print {
    .bg-gradient-to-br { background: white !important; }
    .shadow-lg { box-shadow: none !important; border: 1px solid #ccc; }
  }
</style>
