---
export interface Props {
  width?: number;
  height?: number;
  className?: string;
}

const { width = 200, height = 20, className = 'text-purple-900' } = Astro.props;
---

<!-- Decorative Underline SVG -->
<div class="relative mb-6 flex justify-center">
  <svg class:list={className} height={height} viewBox={`0 0 ${width} ${height}`} width={width}>
    <!-- Centered icon over the gap -->
    <img
      alt="trishul"
      class="absolute left-1/2 top-1/2 h-20 w-20 -translate-x-1/2 -translate-y-1/2 transform"
      src="/trishul.jpg"
    />
  </svg>
</div>
