---
export interface Props {
  width?: number;
  height?: number;
  className?: string;
}

const { width = 200, height = 20, className = 'text-purple-900' } = Astro.props;
---

<!-- Decorative Underline SVG -->
<div class="mb-6 flex justify-center">
  <svg class:list={className} height={height} viewBox={`0 0 ${width} ${height}`} width={width}>
    <!-- Left underline gap up to Om (extended gap) -->
    <path
      d={`M${width * 0.05} ${height * 0.5} Q ${width * 0.2} ${height * 0.25} ${width * 0.45} ${height * 0.5}`}
      fill="none"       stroke="currentColor"       stroke-width="2"></path>
    <!-- Right underline starts further right (extended gap) -->
    <path
      d={`M${width * 0.54} ${height * 0.5} Q ${width * 0.8} ${height * 0.25} ${width * 0.95} ${height * 0.5}`}
      fill="none"       stroke="currentColor"       stroke-width="2"></path>
    <text
      dominant-baseline="middle"       fill="currentColor"       font-size={`${height * 0.8}`}       text-anchor="middle"       x="50%"       y="50%"
    >
      ‡•ê
    </text>
  </svg>
</div>
