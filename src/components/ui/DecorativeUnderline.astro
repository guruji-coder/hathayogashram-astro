---
export interface Props {
  width?: number;
  height?: number;
  className?: string;
}

const { 
  width = 200, 
  height = 20, 
  className = "text-purple-900" 
} = Astro.props;
---

<!-- Decorative Underline SVG -->
<div class="mb-6 flex justify-center">
  <svg 
    width={width} 
    height={height} 
    viewBox={`0 0 ${width} ${height}`} 
    class={className}
  >
    <path 
      d={`M${width * 0.05} ${height * 0.5} Q ${width * 0.5} ${height * 0.25} ${width * 0.95} ${height * 0.5}`} 
      stroke="currentColor" 
      stroke-width="2" 
      fill="none" 
    />
    <circle 
      cx={width * 0.5} 
      cy={height * 0.4} 
      r={height * 0.4} 
      fill="currentColor" 
    />
    <path 
      d={`M${width * 0.46} ${height * 0.4} L${width * 0.48} ${height * 0.6} L${width * 0.52} ${height * 0.2} L${width * 0.54} ${height * 0.4}`} 
      fill="white" 
      stroke="none" 
    />
  </svg>
</div>
