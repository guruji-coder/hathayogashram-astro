---
import { YOGA_GURUS_STYLES } from '$constants/yogaGurusConstants';

interface Props {
  name: string;
  image: string;
  specialty?: string;
  experience?: string;
  description?: string;
}

const { name, image, specialty, experience, description } = Astro.props;
---

<div class:list={YOGA_GURUS_STYLES.SPIRITUAL_CARD}>
  <!-- Profile Image - No Mandala, Bigger Size -->
  <div class:list={YOGA_GURUS_STYLES.PROFILE_CONTAINER}>
    <div class:list={YOGA_GURUS_STYLES.PROFILE_IMAGE_WRAPPER}>
      <img alt={name} class:list={YOGA_GURUS_STYLES.PROFILE_IMAGE} loading="lazy" src={image} />
    </div>
  </div>

  <!-- Guru Information -->
  <div class:list={YOGA_GURUS_STYLES.CONTENT_CONTAINER}>
    <h3 class:list={YOGA_GURUS_STYLES.NAME}>
      {name}
    </h3>

    <!-- Specialty/Profession -->
    {
      specialty && (
        <p class="mt-3 px-2 text-center text-sm font-semibold leading-tight text-orange-600">
          {specialty}
        </p>
      )
    }

    <!-- Experience -->
    {
      experience && (
        <p class="mt-2 px-2 text-center text-xs font-medium text-gray-500">{experience}</p>
      )
    }

    <!-- Description -->
    {
      description && (
        <p class="mt-3 px-3 text-center text-xs italic leading-relaxed text-gray-600">
          {description}
        </p>
      )
    }
  </div>
</div>

<style>
  /* Hide scrollbars for the gurus container */
  #gurusContainer::-webkit-scrollbar {
    display: none !important;
  }
  #gurusContainer {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
