---
import { YOGA_GURUS_STYLES } from '$constants/yogaGurusConstants';

interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props;
---

<div class:list={YOGA_GURUS_STYLES.SPIRITUAL_CARD}>
  <!-- Profile Image - No Mandala, Bigger Size -->
  <div class:list={YOGA_GURUS_STYLES.PROFILE_CONTAINER}>
    <div class:list={YOGA_GURUS_STYLES.PROFILE_IMAGE_WRAPPER}>
      <img alt={name} class:list={YOGA_GURUS_STYLES.PROFILE_IMAGE} loading="lazy" src={image} />
    </div>
  </div>

  <!-- Guru Information -->
  <div class:list={YOGA_GURUS_STYLES.CONTENT_CONTAINER}>
    <h3 class:list={YOGA_GURUS_STYLES.NAME}>
      {name}
    </h3>
  </div>
</div>

<style>
  /* Hide scrollbars for the gurus container */
  #gurusContainer::-webkit-scrollbar {
    display: none !important;
  }
  #gurusContainer {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
