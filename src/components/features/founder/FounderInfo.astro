---
import { HOME_STYLES, FOUNDER_SECTION } from '../../../constants/homePageConstants';
import { BUTTON_STYLES } from '../../../constants/uiConstants';
---

<div class="flex flex-col lg:w-1/2">
	<!-- Philosophy Text -->
	<div class="mb-8 space-y-6">
		<p class="text-justify leading-relaxed text-gray-700">
			{FOUNDER_SECTION.PHILOSOPHY_PARAGRAPHS[0]}
		</p>

		<p class="text-justify leading-relaxed font-bold text-primary italic">
			{FOUNDER_SECTION.PHILOSOPHY_PARAGRAPHS[1]}
		</p>

		<p class="text-justify leading-relaxed text-gray-700">
			<strong>Meaning:</strong>
			{FOUNDER_SECTION.PHILOSOPHY_PARAGRAPHS[2]}
		</p>

		<!-- Founder Information Card -->
		<div class="rounded-full border-2 border-purple-900 bg-white px-4 py-1 text-center shadow-md">
			<h3 class="mb-1 text-base font-bold text-purple-900">
				{FOUNDER_SECTION.FOUNDER_INFO.name}
			</h3>
			<p class="text-sm text-gray-600">
				{FOUNDER_SECTION.FOUNDER_INFO.title}
			</p>
		</div>

		<!-- Know More Button -->
		<div class="mt-8 text-center">
			<a href="/founder" class={`${BUTTON_STYLES.BASE} ${BUTTON_STYLES.VARIANTS.PRIMARY}`}>
				Know More About Founder
			</a>
		</div>
	</div>
</div>
