---

<footer class="bg-gray-900 py-12 text-white">
  <div class="container mx-auto px-4">
    <!-- Main Footer Content -->
    <div class="mb-8 grid grid-cols-1 gap-8 md:grid-cols-4">
      <!-- About Section -->
      <div>
        <div class="mb-6">
          <img
            src="/hya.jpg"
            alt="Hatha Yogashram"
            class="mb-4 h-12 w-12 rounded-full"
          />
          <h3 class="mb-4 text-xl font-bold">Hatha Yogashram</h3>
        </div>
        <p class="mb-6 leading-relaxed text-gray-400">
          Hatha Yoga Ashram is one of the best yoga schools in Rishikesh, India.
          Our school exists to bring the authentic teachings of yoga back to
          yoga; both on and off the mat.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                class="text-lg text-gray-400 transition-colors hover:text-orange-400"
                aria-label={social.name}
              >
                <i class={social.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      {
        footerSections.map((section) => (
          <div>
            <h3 class="mb-6 text-xl font-bold">
              {section.title}
              <div class="mt-2 h-0.5 w-12 bg-orange-400" />
            </h3>
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li class="flex items-center">
                  <span class="mr-3 text-sm text-orange-400">‡•ê</span>
                  <a
                    href={link.href}
                    class="text-gray-400 transition-colors hover:text-orange-400"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <!-- Contact Info -->
      <div>
        <h3 class="mb-6 text-xl font-bold">
          Contact Us
          <div class="mt-2 h-0.5 w-12 bg-orange-400"></div>
        </h3>
        <ul class="space-y-4 text-gray-400">
          <li class="flex items-start">
            <i
              class="fas fa-map-marker-alt mr-3 mt-1 flex-shrink-0 text-orange-400"
            ></i>
            <span>{contactInfo.address}</span>
          </li>
          <li class="flex items-center">
            <i class="fas fa-phone mr-3 mt-1 flex-shrink-0 text-orange-400"></i>
            <a
              href={`tel:${contactInfo.phone}`}
              class="transition-colors hover:text-orange-400"
            >
              {contactInfo.phone}
            </a>
          </li>
          <li class="flex items-center">
            <i class="fas fa-envelope mr-3 mt-1 flex-shrink-0 text-orange-400"
            ></i>
            <a
              href={`mailto:${contactInfo.email}`}
              class="break-all transition-colors hover:text-orange-400"
            >
              {contactInfo.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    		<!-- Bottom Quick Links Section -->
		<div class="mt-16 border-t border-gray-700 pt-8">
			<div class="bottom-quick-links-wrap">
				<h3 class="common-heading mb-6 text-center text-xl font-semibold text-white">
					Quick Links
					<div class="heading-ornament mx-auto mt-2 h-0.5 w-12 bg-orange-400"></div>
				</h3>
				<div class="bottom-link-collection flex flex-wrap items-center justify-center gap-2">
                  {allLinks.map((link, index) => [
                    <a
                      href={link.href}
                      class="inline-block rounded-full border border-gray-600 bg-gray-800 px-4 py-2 text-sm text-gray-300 transition-all duration-300 hover:border-orange-400 hover:bg-orange-500 hover:text-white"
                    >
                      {link.label}
                    </a>,
                    index < allLinks.length - 1 && (
                      <span class="hidden text-gray-600 sm:inline"> </span>
                    )
                  ])}
				</div>
			</div>
		</div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col items-center justify-between md:flex-row">
        <p class="mb-4 text-sm text-gray-400 md:mb-0">
          &copy; {new Date().getFullYear()} Hatha Yogashram. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm text-gray-400">
          <a href="/privacy" class="transition-colors hover:text-orange-400"
            >Privacy Policy</a
          >
          <a href="/terms" class="transition-colors hover:text-orange-400"
            >Terms of Service</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
