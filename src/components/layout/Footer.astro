---
// Simple footer data
const footerSections = [
  {
    title: "Quick Links",
    links: [
      { label: "Home", href: "/" },
      { label: "About Us", href: "/our-founder" },
      { label: "Our Teachers", href: "/our-team" },
      { label: "Gallery", href: "/gallery" },
      { label: "Blog", href: "/blog" },
      { label: "Contact", href: "/contact" }
    ]
  },
  {
    title: "Courses",
    links: [
      { label: "100 Hour YTTC", href: "/courses/100-hour" },
      { label: "200 Hour YTTC", href: "/courses/200-hour-yoga-teacher-training" },
      { label: "300 Hour YTTC", href: "/courses/300-hour" },
      { label: "500 Hour YTTC", href: "/courses/500-hour" },
      { label: "Yoga Retreats", href: "/courses/retreat" },
      { label: "Online Courses", href: "/online/courses" }
    ]
  }
];

const contactInfo = {
  address: "Laxman Jhula, Rishikesh, Uttarakhand, India",
  phone: "+91-9410771660",
  email: "hathayogashram7@gmail.com"
};

const socialLinks = [
  { name: "Instagram", url: "#", icon: "fab fa-instagram" },
  { name: "YouTube", url: "#", icon: "fab fa-youtube" },
  { name: "WhatsApp", url: "#", icon: "fab fa-whatsapp" },
  { name: "Facebook", url: "#", icon: "fab fa-facebook" }
];
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      
      <!-- About Section -->
      <div>
        <div class="mb-6">
          <img src="/hya.jpg" alt="Hatha Yogashram" class="h-12 w-12 rounded-full mb-4" />
          <h3 class="text-xl font-bold mb-4">Hatha Yogashram</h3>
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed">
          Hatha Yoga Ashram is one of the best yoga schools in Rishikesh, India. 
          Our school exists to bring the authentic teachings of yoga back to yoga; 
          both on and off the mat.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              class="text-gray-400 hover:text-orange-400 transition-colors text-lg"
              aria-label={social.name}
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      {footerSections.map(section => (
        <div>
          <h3 class="text-xl font-bold mb-6">
            {section.title}
            <div class="h-0.5 w-12 bg-orange-400 mt-2"></div>
          </h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li class="flex items-center">
                <span class="mr-3 text-sm text-orange-400">‡•ê</span>
                <a href={link.href} class="text-gray-400 hover:text-orange-400 transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Contact Info -->
      <div>
        <h3 class="text-xl font-bold mb-6">
          Contact Us
          <div class="h-0.5 w-12 bg-orange-400 mt-2"></div>
        </h3>
        <ul class="space-y-4 text-gray-400">
          <li class="flex items-start">
            <i class="fas fa-map-marker-alt mt-1 mr-3 text-orange-400 flex-shrink-0"></i>
            <span>{contactInfo.address}</span>
          </li>
          <li class="flex items-center">
            <i class="fas fa-phone mt-1 mr-3 text-orange-400 flex-shrink-0"></i>
            <a href={`tel:${contactInfo.phone}`} class="hover:text-orange-400 transition-colors">
              {contactInfo.phone}
            </a>
          </li>
          <li class="flex items-center">
            <i class="fas fa-envelope mt-1 mr-3 text-orange-400 flex-shrink-0"></i>
            <a href={`mailto:${contactInfo.email}`} class="hover:text-orange-400 transition-colors break-all">
              {contactInfo.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          &copy; {new Date().getFullYear()} Hatha Yogashram. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm text-gray-400">
          <a href="/privacy" class="hover:text-orange-400 transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-orange-400 transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
