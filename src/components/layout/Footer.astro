---
// Simple footer data
import Logo from '$components/navigation/Logo.astro';
import { ICON_IMAGES } from '$constants/imageConstants';
import {
  ROUTE_HOME,
  ROUTE_OUR_FOUNDER,
  ROUTE_OUR_TEAM,
  ROUTE_GALLERY,
  ROUTE_BLOG,
  ROUTE_CONTACT,
  ROUTE_TTC_100,
  ROUTE_TTC_200,
  ROUTE_TTC_300,
  ROUTE_TTC_500,
  ROUTE_RETREATS,
  ROUTE_ONLINE_COURSES,
  ROUTE_ONLINE_200,
  ROUTE_ONLINE_300,
  ROUTE_ONLINE_YIN,
  ROUTE_ONLINE_YOGA_NIDRA,
  ROUTE_AERIAL_YOGA,
  ROUTE_PRIVACY,
  ROUTE_TERMS,
} from '../../constants/routesConstants';

const footerSections = [
  {
    title: 'Quick Links',
    links: [
      { label: 'Home', href: ROUTE_HOME },
      { label: 'About Us', href: ROUTE_OUR_FOUNDER },
      { label: 'Our Teachers', href: ROUTE_OUR_TEAM },
      { label: 'Gallery', href: ROUTE_GALLERY },
      { label: 'Blog', href: ROUTE_BLOG },
      { label: 'Contact', href: ROUTE_CONTACT },
    ],
  },
  {
    title: 'Courses',
    links: [
      { label: '100 Hour YTTC', href: ROUTE_TTC_100 },
      { label: '200 Hour YTTC', href: ROUTE_TTC_200 },
      { label: '300 Hour YTTC', href: ROUTE_TTC_300 },
      { label: '500 Hour YTTC', href: ROUTE_TTC_500 },
      { label: 'Yoga Retreats', href: ROUTE_RETREATS },
      { label: 'Online Courses', href: ROUTE_ONLINE_COURSES },
    ],
  },
];

const allLinks = [
  { label: 'Hatha Yoga Ashram', href: ROUTE_HOME },
  { label: 'Hatha Yoga Ashram Rishikesh', href: ROUTE_HOME },
  { label: '100 Hour Yoga Teacher Training in Rishikesh', href: ROUTE_TTC_100 },
  { label: '200 Hour Yoga Teacher Training in Rishikesh', href: ROUTE_TTC_200 },
  { label: '300 Hour Yoga Teacher Training in Rishikesh', href: ROUTE_TTC_300 },
  { label: '500 Hour Yoga Teacher Training in Rishikesh', href: ROUTE_TTC_500 },
  { label: 'Yoga in Rishikesh', href: ROUTE_HOME },
  { label: 'Best Yoga School in Rishikesh', href: ROUTE_HOME },
  { label: 'Yoga Course in Rishikesh', href: ROUTE_HOME },
  { label: 'Yoga school in India', href: ROUTE_HOME },
  { label: 'Aerial Yoga TTC', href: ROUTE_AERIAL_YOGA },
  { label: 'Yoga Teacher Training in India', href: ROUTE_HOME },
  { label: 'Yoga TTC in India', href: ROUTE_HOME },
  { label: 'Online Yoga Teacher Training', href: ROUTE_ONLINE_COURSES },
  { label: 'Online Yoga Teacher Training Course', href: ROUTE_ONLINE_COURSES },
  { label: 'Online Yoga Course', href: ROUTE_ONLINE_COURSES },
  {
    label: '200 Hour Online Yoga Teacher Training Course',
    href: ROUTE_ONLINE_200,
  },
  {
    label: '300 Hour Online Yoga Teacher Training Course',
    href: ROUTE_ONLINE_300,
  },
  { label: 'Yin Yoga Online', href: ROUTE_ONLINE_YIN },
  {
    label: 'Yin Yoga Online Yoga Teacher Training Course',
    href: ROUTE_ONLINE_YIN,
  },
  { label: 'Yoga Nidra Online', href: ROUTE_ONLINE_YOGA_NIDRA },
  {
    label: 'Yoga Nidra Online Yoga Teacher Training Course',
    href: ROUTE_ONLINE_YOGA_NIDRA,
  },
];

const contactInfo = {
  address: 'Laxman Jhula, Rishikesh, Uttarakhand, India',
  phone: '+91-9410771660',
  email: 'hathayogashram7@gmail.com',
};

const socialLinks = [
  { name: 'Instagram', url: '#', icon: 'fab fa-instagram' },
  { name: 'YouTube', url: '#', icon: 'fab fa-youtube' },
  { name: 'WhatsApp', url: '#', icon: 'fab fa-whatsapp' },
  { name: 'Facebook', url: '#', icon: 'fab fa-facebook' },
];
---

<footer class="bg-gray-900 py-12 text-white">
  <div class="container mx-auto px-4">
    <!-- Main Footer Content -->
    <div class="mb-8 grid grid-cols-1 gap-8 md:grid-cols-4">
      <!-- About Section -->
      <div>
        <div class="mb-6">
          <Logo />
          <h3 class="mb-4 text-xl font-bold">Hatha Yogashram</h3>
        </div>
        <p class="mb-6 leading-relaxed text-gray-400">
          Hatha Yoga Ashram is one of the best yoga schools in Rishikesh, India. Our school exists
          to bring the authentic teachings of yoga back to yoga; both on and off the mat.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          {
            socialLinks.map(social => (
              <a
                aria-label={social.name}
                class="text-lg text-gray-400 transition-colors hover:text-orange-400"
                href={social.url}
              >
                <i class:list={social.icon} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      {
        footerSections.map(section => (
          <div>
            <h3 class="mb-6 text-xl font-bold">
              {section.title}
              <div class="mt-2 h-0.5 w-12 bg-orange-400" />
            </h3>
            <ul class="space-y-3">
              {section.links.map(link => (
                <li class="flex items-center">
                  <span class="mr-3 text-sm text-orange-400">  <img class=" zw-10 h-10" src={ICON_IMAGES.OM_SYMBOL}  />
</span>
                  <a class="text-gray-400 transition-colors hover:text-orange-400" href={link.href}>
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <!-- Contact Info -->
      <div>
        <h3 class="mb-6 text-xl font-bold">
          Contact Us
          <div class="mt-2 h-0.5 w-12 bg-orange-400"></div>
        </h3>
        <ul class="space-y-4 text-gray-400">
          <li class="flex items-start">
            <i class="fas fa-map-marker-alt mr-3 mt-1 flex-shrink-0 text-orange-400"></i>
            <span>{contactInfo.address}</span>
          </li>
          <li class="flex items-center">
            <i class="fas fa-phone mr-3 mt-1 flex-shrink-0 text-orange-400"></i>
            <a class="transition-colors hover:text-orange-400" href={`tel:${contactInfo.phone}`}>
              {contactInfo.phone}
            </a>
          </li>
          <li class="flex items-center">
            <i class="fas fa-envelope mr-3 mt-1 flex-shrink-0 text-orange-400"></i>
            <a
              class="break-all transition-colors hover:text-orange-400"
              href={`mailto:${contactInfo.email}`}
            >
              {contactInfo.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Quick Links Section -->
    <div class="mt-16 border-t border-gray-700 pt-8">
      <div class="bottom-quick-links-wrap">
        <h3 class="common-heading mb-6 text-center text-xl font-semibold text-white">
          Quick Links
          <div class="heading-ornament mx-auto mt-2 h-0.5 w-12 bg-orange-400"></div>
        </h3>
        <div class="bottom-link-collection flex flex-wrap items-center justify-center gap-2">
          {
            allLinks.map((link, index) => [
              <a
                class="inline-block rounded-full border border-gray-600 bg-gray-800 px-4 py-2 text-sm text-gray-300 transition-all duration-300 hover:border-orange-400 hover:bg-orange-500 hover:text-white"
                href={link.href}
              >
                {link.label}
              </a>,
              index < allLinks.length - 1 && <span class="hidden text-gray-600 sm:inline"> </span>,
            ])
          }
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col items-center justify-between md:flex-row">
        <p class="mb-4 text-sm text-gray-400 md:mb-0">
          &copy; {new Date().getFullYear()} Hatha Yogashram. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm text-gray-400">
          <a class="transition-colors hover:text-orange-400" href={ROUTE_PRIVACY}>Privacy Policy</a>
          <a class="transition-colors hover:text-orange-400" href={ROUTE_TERMS}>Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
