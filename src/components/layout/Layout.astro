---
import Header from "./Header.svelte";
import Footer from "./Footer.svelte";
import "../../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/hya.jpg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Primary Meta Tags -->
    <meta name="description" content="Hatha Yogashram - 300 Hour Yoga Teacher Training in Rishikesh, India" />
    <meta name="keywords" content="yoga, yoga teacher training, hatha yoga, rishikesh, india, meditation, pranayama" />
    <meta name="title" content="200/300 Hour Yoga Teacher Training in Rishikesh, India | Hatha Yogashram" />
    <meta name="author" content="Hatha Yogashram" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://hathayogashram.com" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://hathayogashram.com" />
    <meta property="og:title" content="200/300 Hour Yoga Teacher Training in Rishikesh, India | Hatha Yogashram" />
    <meta property="og:description" content="Join authentic 200/300 hour Yoga Teacher Training in Rishikesh with Hatha Yogashram. RYS 200/300 Yoga Alliance certified courses in the yoga capital of the world." />
    <meta property="og:image" content="https://hathayogashram.com/yogaschoolpic.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Hatha Yogashram" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://hathayogashram.com" />
    <meta property="twitter:title" content="200/300 Hour Yoga Teacher Training in Rishikesh, India | Hatha Yogashram" />
    <meta property="twitter:description" content="Join authentic 200/300 hour Yoga Teacher Training in Rishikesh with Hatha Yogashram. RYS 200/300 Yoga Alliance certified courses in the yoga capital of the world." />
    <meta property="twitter:image" content="https://hathayogashram.com/yogaschoolpic.jpg" />

    <!-- Additional SEO Tags -->
    <meta name="geo.region" content="IN-UK" />
    <meta name="geo.placename" content="Rishikesh" />
    <meta name="geo.position" content="30.0869;78.2676" />
    <meta name="ICBM" content="30.0869, 78.2676" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />

    <!-- Instagram Embed Script -->
    <script async src="//www.instagram.com/embed.js"></script>
    <script async onerror="var a=document.createElement('script');a.src='https://iframely.net/files/instagram_embed.js';document.body.appendChild(a);" src="https://www.instagram.com/embed.js"></script>

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);} 
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script>

    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {  
        "@context": "https://schema.org",
        "@type": "EducationalOrganization",
        "name": "Hatha Yogashram",
        "alternateName": "Hatha Yogashram Rishikesh",
        "url": "https://hathayogashram.com",
        "logo": "https://hathayogashram.com/hya.jpg",
        "description": "Authentic 200/300 hour Yoga Teacher Training courses in Rishikesh, India. Yoga Alliance certified school offering traditional Hatha Yoga, Vinyasa, meditation and pranayama training.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Yoga Capital of the World",
          "addressLocality": "Rishikesh",
          "addressRegion": "Uttarakhand",
          "postalCode": "249201",
          "addressCountry": "IN"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 30.0869,
          "longitude": 78.2676
        },
        "sameAs": [
          "https://www.facebook.com/hathayogashram",
          "https://www.instagram.com/hathayogashram",
          "https://www.youtube.com/hathayogashram"
        ],
        "offers": [
          {
            "@type": "Course",
            "name": "200 Hour Yoga Teacher Training",
            "description": "Comprehensive 200 hour Yoga Alliance certified teacher training course in Rishikesh",
            "provider": { "@type": "Organization", "name": "Hatha Yogashram" }
          },
          {
            "@type": "Course",
            "name": "300 Hour Yoga Teacher Training",
            "description": "Advanced 300 hour Yoga Alliance certified teacher training course in Rishikesh",
            "provider": { "@type": "Organization", "name": "Hatha Yogashram" }
          }
        ],
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "reviewCount": "150",
          "bestRating": "5",
          "worstRating": "1"
        }
      }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Space+Grotesk&family=Unbounded&family=Quicksand&display=swap" rel="stylesheet" />

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>
