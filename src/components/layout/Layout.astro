---
import Header from "./Header.svelte";
import Footer from "./Footer.svelte";
import SEO from "../SEO.astro";
import "../../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  nofollow?: boolean;
  ogType?: 'website' | 'article' | 'product';
  additionalSchemas?: any[];
}

const { 
  title,
  description,
  canonical,
  image,
  noindex = false,
  nofollow = false,
  ogType = 'website',
  additionalSchemas = []
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      image={image}
      noindex={noindex}
      nofollow={nofollow}
      ogType={ogType}
      additionalSchemas={additionalSchemas}
    />
    
  </head>
  <body class="font-space antialiased">
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>
