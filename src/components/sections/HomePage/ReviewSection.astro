---
import { REVIEWS_SECTION, REVIEWS_STYLES } from '../../../constants/reviewsConstants';
import SectionHeader from '../../ui/SectionHeader.astro';
import HorizontalCarousel from '../../ui/HorizontalCarousel.astro';
import ProfileCard from '../../ui/ProfileCard.astro';

// Function to generate star rating
function generateStars(rating: number): string[] {
	return Array(5)
		.fill('')
		.map((_, index) => (index < rating ? 'fas fa-star' : 'far fa-star'));
}
---

<!-- Reviews Section -->
<section class="from-purple-50 to-white px-4 py-16">
	<div class:list={REVIEWS_STYLES.CONTAINER}>
		<!-- Section Header -->
		<SectionHeader 
			containerClass="mb-16 text-center"    svgHeight={20}    svgWidth={200}    title={REVIEWS_SECTION.TITLE}    titleClass={REVIEWS_STYLES.TITLE}
		/>

		<!-- Reviews - Horizontal scroll: 1 for mobile, 2 for tablet, 3 for desktop -->
		<HorizontalCarousel 
			containerClass="flex snap-x snap-mandatory gap-6 overflow-x-auto scroll-smooth pt-12 pb-4"    id="reviewsContainer"
			scrollInterval={3000}
		>
			{REVIEWS_SECTION.REVIEWS.map(review => (
				<ProfileCard
					cardClass="relative w-[calc(100%-12px)] flex-shrink-0 transform snap-start rounded-3xl border-2 border-orange-300 bg-white p-6 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl md:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]"
					contentContainerClass="text-center"      image={review.image}      imageAlt={review.name}      profileContainerClass="-mt-12 mb-6 flex justify-center"      profileImageClass="h-full w-full rounded-full object-cover"      profileImageWrapperClass="h-24 w-24 overflow-hidden rounded-full border-1 border-orange-300 bg-white p-1"
				>
					<h3 class="mb-2 text-xl font-bold text-gray-800">
						{review.name}
					</h3>

					<!-- Star Rating -->
					<div class="mb-4 flex items-center justify-center">
						{generateStars(review.rating).map((starClass, index) => (
							<i class:list={[`${starClass}`,`mr-1 text-lg text-orange-400`]}></i>
						))}
					</div>

					<!-- Review Text -->
					<p class="mb-6 text-center leading-relaxed text-gray-700">
						{review.text.length > 80 ? review.text.substring(0, 80) + '...' : review.text}
					</p>

					<!-- Course and Country Info -->
					<div class="text-center text-sm text-gray-500">
						{review.course} â€¢ {review.country}
					</div>
				</ProfileCard>
			))}
		</HorizontalCarousel>

		<!-- View All Reviews Button -->
		<div class="text-center">
			<a
				class:list={REVIEWS_STYLES.VIEW_ALL_BUTTON}     href={REVIEWS_SECTION.VIEW_ALL_URL}     rel="noopener noreferrer"     target="_blank"
			>
				{REVIEWS_SECTION.VIEW_ALL_BUTTON}
				<i class="fas fa-external-link-alt ml-2"></i>
			</a>
		</div>
	</div>
</section>
