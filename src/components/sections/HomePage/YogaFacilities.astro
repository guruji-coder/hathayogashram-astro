---
import FocusCards from '$ui/FocusCards.astro';
import { FACILITIES_CARDS_SECTION } from '$constants/HomePage/homePageConstants';
import { FacilityCards } from '$components/svelte';
---

<!-- Focus Cards Gallery Section -->
<section class="bg-gray-50 bg-gradient-to-br from-purple-100 to-purple-50 py-16">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-center text-3xl font-bold text-purple-900 md:text-4xl">
        {FACILITIES_CARDS_SECTION.TITLE}
      </h2>

      <div class="mb-6 flex justify-center">
        <svg class="text-purple-900" height="20" viewBox="0 0 200 20" width="200">
          <path d="M10 10 Q 100 5 190 10" fill="none" stroke="currentColor" stroke-width="2"></path>
          <circle cx="100" cy="8" fill="currentColor" r="8"></circle>
          <path d="M92 8 L96 12 L104 4 L108 8" fill="white" stroke="none"></path>
        </svg>
      </div>
    </div>

    <!-- Focus Cards Component -->
    <FacilityCards cards={FACILITIES_CARDS_SECTION.CARDS} client:load />
  </div>
</section>
