---
import { APPLE_CARDS_SECTION } from '../../../constants/homePageConstants';
import SectionHeader from '../../ui/SectionHeader.astro';

// Apple Cards Carousel component (we'll need to convert the Svelte version)
// For now, let's create a simple grid layout for the cards
---

<section class="py-16 bg-gradient-to-br from-purple-50 to-pink-50">
	<div class="container mx-auto px-4">
		<!-- Section Header -->
		<SectionHeader 
			title={APPLE_CARDS_SECTION.TITLE}
			containerClass="mb-16 text-center"
			titleClass="text-3xl font-bold text-purple-900 md:text-4xl"
			svgWidth={200}
			svgHeight={20}
		/>

		<!-- Subtitle -->
		<div class="mb-12 text-center">
			<p class="mx-auto max-w-4xl text-lg text-gray-700">
				{APPLE_CARDS_SECTION.SUBTITLE}
			</p>
		</div>

		<!-- Cards Grid Layout -->
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{APPLE_CARDS_SECTION.CARDS.map((card, index) => (
				<div class="group relative overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105">
					<!-- Card Image -->
					<div class="aspect-video overflow-hidden">
						<img
							src={card.src}
							alt={card.title}
							class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
							loading="lazy"
						/>
					</div>
					
					<!-- Card Content -->
					<div class="p-6">
						<h3 class="mb-4 text-xl font-bold text-purple-900">
							{card.title}
						</h3>
						
						<!-- Card Content HTML -->
						<div class="prose prose-sm max-w-none text-gray-700" set:html={card.content} />
					</div>
				</div>
			))}
		</div>
	</div>
</section>
