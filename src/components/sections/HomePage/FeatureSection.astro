---
import { HOME_STYLES, FOUNDER_SECTION } from '$constants/homePageConstants';
import SectionHeader from '$ui/SectionHeader.astro';
import FounderImages from '$features/founder/FounderImages.astro';
import FounderInfo from '$features/founder/FounderInfo.astro';
import FounderAwards from '$features/founder/FounderAwards.astro';
---

<section class={`${HOME_STYLES.SECTION_PADDING} bg-white`}>
	<div class={HOME_STYLES.CONTAINER}>
		<!-- Section Header -->
		<SectionHeader 
			title={FOUNDER_SECTION.TITLE}
			containerClass="mb-12 text-center"
			svgWidth={200}
			svgHeight={20}
		/>

		<!-- Main Content Layout -->
		<div class="mx-10 max-w-6xl text-[15px]">
			<p class="">
				{FOUNDER_SECTION.INTRO_TEXT}
			</p>

			<div class="my-10 flex flex-col gap-8 lg:flex-row lg:gap-12">
				<!-- Left Column: Images -->
				<FounderImages />

				<!-- Right Column: Content -->
				<FounderInfo />
			</div>
		</div>

		<!-- Awards & Honours Section -->
		<FounderAwards />
	</div>
</section>
