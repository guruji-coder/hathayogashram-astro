---
import FAQCard from '$ui/FAQCard.astro';
import { FAQ_FLIP_CARDS } from '$constants/faqConstants';

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Frequently Asked Questions", subtitle = "Get answers to common questions about our yoga teacher training programs" } = Astro.props;
---

<section class="py-16 bg-gradient-to-br from-purple-50 to-indigo-50">
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">{title}</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
    </div>

    <!-- FAQ Cards Grid -->
    <div class="faq-grid grid gap-3 md:gap-4 lg:gap-6">
      {FAQ_FLIP_CARDS.map(faq => (
        <FAQCard 
          answer={faq.answer}
          category={faq.category}
          question={faq.question}
        />
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <p class="text-lg text-gray-700 mb-6">Still have questions? We'd love to help!</p>
      <a class="inline-block bg-gradient-to-r from-purple-600 to-indigo-600 text-white px-8 py-3 rounded-full font-semibold hover:from-purple-700 hover:to-indigo-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" href="/contact">
        Contact Us
      </a>
    </div>

  </div>
</section>

<style>
  /* Responsive Grid Layout */
  .faq-grid {
    /* Mobile: 1 column */
    grid-template-columns: 1fr;
  }
  
  /* Tablet: 3x3 grid */
  @media (min-width: 768px) {
    .faq-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  /* Desktop: 4x4 grid */
  @media (min-width: 1024px) {
    .faq-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
