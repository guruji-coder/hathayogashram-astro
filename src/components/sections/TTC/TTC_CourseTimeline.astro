---

interface Props {
  timelineData: {
    title: string;
    events: Array<{
      title: string;
      date: string;
      time: string;
      icon: string;
    }>;
  };
}

const { timelineData } = Astro.props;
---

<section class="py-16 bg-purple-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="text-4xl font-bold text-primary mb-4">
        {timelineData.title}
      </h2>
      <div class="flex justify-center mb-8">
        <div class="w-16 h-1 bg-orange-600 rounded"></div>
        <div class="w-4 h-1 bg-orange-400 rounded mx-1"></div>
        <div class="w-8 h-1 bg-orange-400 rounded"></div>
      </div>
    </div>

    <!-- Timeline Grid -->
    <div class="mx-auto max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          timelineData.events.map((event) => (
            <div class="bg-white rounded-xl p-6 hover:shadow-xl duration-300">
              <div class="flex items-start space-x-4">
                <!-- Icon -->
                <div class="flex-shrink-0 w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center">
                  <i class:list={['fas', event.icon, 'text-orange-600', 'text-3xl']}></i>
                </div>

                <!-- Content -->
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-800 mb-2">
                    {event.title}
                  </h3>
                  <div class="space-y-1">
                    <p class="text-gray-600">
                      <span class="font-semibold text-orange-600">Date:</span> {event.date}
                    </p>
                    <p class="text-gray-600">
                      <span class="font-semibold text-orange-600">Time:</span> {event.time}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
