---
interface Props {
  accommodationData: {
    readonly title: string;
    readonly description: string;
    readonly additionalInfo: string;
    readonly images: readonly string[];
    readonly knowMoreLink?: string;
  };
}

const { accommodationData } = Astro.props;
---

<section class="bg-white py-16">
  <div class="container mx-auto px-4">
    <div class="mx-auto flex max-w-7xl flex-col items-start gap-8 lg:flex-row">
      <!-- Images Grid - First on Large Screens -->
      <div class="w-full lg:w-1/2 order-last lg:order-first">
        <div class="grid grid-cols-2 gap-4">
          {
            accommodationData.images.map((image, index) => (
              <div class="overflow-hidden rounded-lg shadow-md">
                <img
                  alt={`Accommodation ${index + 1}`}
                  class="h-48 w-full object-cover transition-transform duration-300 hover:scale-105"
                  src={image}
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Content - Second on Large Screens -->
      <div class="w-full lg:w-1/2 lg:pr-8 order-first lg:order-last">
        <!-- Title -->
        <h2 class="mb-8 text-4xl font-bold leading-tight text-primary lg:text-5xl">
          {accommodationData.title}
        </h2>

        <!-- Underline -->
        <div class="mb-8 h-1 w-24 bg-primary"></div>

        <!-- Description -->
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p class="text-justify">
            {accommodationData.description}
          </p>

          <p class="text-justify">
            {accommodationData.additionalInfo}
          </p>
        </div>

        <!-- Know More Button -->
        {
          accommodationData.knowMoreLink && (
            <div class="mt-8">
              <a
                class="inline-block rounded-lg bg-orange-500 px-8 py-3 font-semibold uppercase tracking-wider text-white transition-colors duration-300 hover:bg-orange-600"
                href={accommodationData.knowMoreLink}
              >
                KNOW MORE
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
