---
import SectionHeader from '$components/ui/SectionHeader.astro';
import { CERTIFICATE_IMAGES } from '$constants/imageConstants';
---

<section class="bg-white py-16" id="Certification">
  <div class="container mx-auto block items-center justify-center px-4 text-center md:flex">
    <!-- Section Header -->
    <div class="md:w-1/2">
      <SectionHeader title="Worldwide Accredited Certification" />

      <!-- Description -->
      <h3 class="mx-auto max-w-2xl font-space text-lg text-gray-700">
        With our certificate you can teach Yoga worldwide. Our 200 hour Yoga teacher training course
        is fully accredited with Yoga Alliance. After completion of the course, you can register
        yourselves as RYT 200 with Yoga Alliance.
      </h3>
    </div>

    <!-- Certificate Image -->
    <div class="mx-auto max-w-full md:w-1/2 border border-orange-500">
      <img
        alt="Hatha Yogashram Certificate of Completion"
        class="w-full h-auto rounded-xl"
        src={CERTIFICATE_IMAGES.CERTIFICATE}
      />
    </div>
  </div>
</section>
