---
import { TRAINING_200_COURSE_DATES_SECTION } from '$constants/training200Constants';
import Button from '../../ui/Button.astro';
import { ROUTE_CONTACT } from '../../../constants/routesConstants';
import SectionHeader from '$components/ui/SectionHeader.astro';


const { title, subtitle, dates, courseInfo, bookingButton } = TRAINING_200_COURSE_DATES_SECTION;
---

<section id="Dates" class="py-16 ">
  <div class="container mx-auto px-4">
    <!-- Header -->
      <SectionHeader title="Course Dates" subtitle="Join us on our transformative journey through yoga." />


    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Dates Grid -->
      <div class="lg:col-span-2">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {dates.map((date) => (
            <div class="group bg-gradient-to-br from-white to-gray-50 rounded-xl border border-gray-100 p-6 hover:shadow-xl hover:border-primary/20 transition-all duration-300">
              <div class="flex items-start gap-4">
                <!-- Calendar Icon -->
                <div class="bg-gradient-to-br from-primary to-purple-600 rounded-lg p-3 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                  </svg>
                </div>
                
                <!-- Date Info -->
                <div class="flex-1 min-w-0 flex justify-between">
                    <div class="">
                  <div class="font-bold text-primary text-lg mb-1">
                    {date.startDate} - {date.endDate}
                  </div>
                  <div class="text-sm text-primary font-medium mb-3">
                    {date.status === 'limited' 
                      ? `Only ${date.seatsLeft} seats left!`
                      : 'Seats Available'
                    }
                  </div>
                  </div>

                  <!-- Enroll Button -->
                  <div class="">
                  <Button href={ROUTE_CONTACT} class="bg-gradient-to-r from-primary to-purple-600 hover:from-purple-600 hover:to-primary text-white whitespace-nowrap font-semibold py-2.5 px-4 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center">
                    Enroll Now
                  </Button>
                  </div>
                  
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Course Info Sidebar -->
      <div class="lg:col-span-1 text-primary">
        <div class="sticky top-24">
          <div class="bg-gradient-to-br from-white via-purple-50/30 to-orange-50/30 rounded-2xl border border-gray-200 p-8 shadow-xl backdrop-blur-sm">
            <!-- Course Duration -->
            <div class="text-center mb-8">
              <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary to-purple-600 rounded-full mb-4 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <p class="text-gray-600 text-sm font-semibold mb-2 uppercase tracking-wider">Course Duration</p>
              <p class="text-4xl font-bold bg-gradient-to-r from-primary to-purple-600 bg-clip-text text-transparent">{courseInfo.duration}</p>
            </div>

            <!-- Course Fees -->
            <div class="mb-8">
              <div class="flex items-center justify-center mb-6">
                <div class="bg-gradient-to-br bg-primary rounded-full w-14 h-14 flex items-center justify-center mr-3 shadow-lg">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                  </svg>
                </div>
                <h3 class="text-gray-700 font-bold uppercase tracking-wide">Investment Options</h3>
              </div>
              
              <div class="space-y-4">
                <div class="bg-white/70 rounded-xl p-5 border border-purple-100 hover:shadow-lg transition-all duration-300">
                  <div class="flex justify-between items-center">
                    <div>
                      <p class="font-bold text-2xl text-gray-900">{courseInfo.fees.private.amount}</p>
                      <p class="text-sm text-orange-600 font-medium">{courseInfo.fees.private.type}</p>
                    </div>
                    <Button href={ROUTE_CONTACT} class="bg-gradient-to-r from-primary to-purple-600 hover:from-purple-600 hover:to-primary text-white whitespace-nowrap font-semibold py-2.5 px-4 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center">
                    Enroll Now
                  </Button>
                  </div>
                </div>
                
                <div class="bg-white/70 rounded-xl p-5 border border-orange-100 hover:shadow-lg transition-all duration-300">
                  <div class="flex justify-between items-center">
                    <div>
                      <p class="font-bold text-2xl text-gray-900">{courseInfo.fees.shared.amount}</p>
                      <p class="text-sm text-orange-600 font-medium">{courseInfo.fees.shared.type}</p>
                    </div>
                  <Button href={ROUTE_CONTACT} class="bg-gradient-to-r from-primary to-purple-600 hover:from-purple-600 hover:to-primary text-white whitespace-nowrap font-semibold py-2.5 px-4 rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl inline-flex items-center justify-center">
                    Enroll Now
                  </Button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Without Stay -->
            <div class="mb-8 bg-white/70 rounded-xl p-6 border border-gray-100">
              <div class="flex items-center mb-4">
                <div class="bg-gradient-to-br from-primary to-orange-500 rounded-full w-10 h-10 flex items-center justify-center mr-3 shadow-lg">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
                  </svg>
                </div>
                <p class="text-gray-700 font-bold uppercase tracking-wide text-sm">Day Program</p>
              </div>
              <p class="font-bold text-3xl text-gray-900 mb-2">{courseInfo.withoutStay.amount}</p>
              <p class="text-sm text-orange-600 font-medium">{courseInfo.withoutStay.note}</p>
            </div>

            <!-- Book Now Button -->
            <div class="text-center">
              <Button 
                href={ROUTE_CONTACT} 
                class="w-full bg-gradient-to-r from-primary via-purple-600 to-orange-500 hover:from-orange-500 hover:via-primary hover:to-purple-600 text-white font-bold py-4 px-8 rounded-xl transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105"
              >
                <span class="flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {bookingButton.text}
                </span>
              </Button>
              
              <!-- Trust indicators -->
              <div class="mt-6 flex items-center justify-center space-x-6 text-sm">
                <div class="flex items-center group hover:scale-110 transition-transform duration-200">
                  <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center mr-2 shadow-md">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-gray-700 group-hover:text-primary transition-colors">Certified</span>
                </div>
                <div class="flex items-center group hover:scale-110 transition-transform duration-200">
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-2 shadow-md">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-gray-700 group-hover:text-primary transition-colors">Secure</span>
                </div>
                <div class="flex items-center group hover:scale-110 transition-transform duration-200">
                  <div class="w-8 h-8 bg-pink-500 rounded-full flex items-center justify-center mr-2 shadow-md">
                    <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                  </div>
                  <span class="font-semibold text-gray-700 group-hover:text-primary transition-colors">Trusted</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
