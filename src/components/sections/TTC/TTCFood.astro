---
interface Props {
  foodData: {
    readonly title: string;
    readonly description: string;
    readonly benefits: ReadonlyArray<string>;
    readonly images: ReadonlyArray<string>;
    readonly knowMoreLink?: string;
  };
}

const { foodData } = Astro.props;
---

<section class="bg-white py-16">
  <div class="container mx-auto px-4">
    <div class="mx-auto flex max-w-7xl flex-col items-start gap-8 lg:flex-row">
      <!-- Images Grid - Left Side -->
      <div class="w-full lg:w-1/2">
        <div class="grid grid-cols-2 gap-4">
          {
            foodData.images.map((image, index) => (
              <div class="overflow-hidden rounded-lg shadow-md">
                <img
                  alt={`Food for yogi ${index + 1}`}
                  class="h-48 w-full object-cover transition-transform duration-300 hover:scale-105"
                  src={image}
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Content - Right Side -->
      <div class="w-full lg:w-1/2 lg:pl-8">
        <!-- Title -->
        <h2 class="mb-8 text-4xl font-bold leading-tight text-primary lg:text-5xl font-kaushan">
          {foodData.title}
        </h2>

        <!-- Underline -->
        <div class="mb-8 h-1 w-24 bg-primary"></div>

        <!-- Description -->
        <div class="space-y-6 text-lg leading-relaxed text-gray-700">
          <p class="text-justify">
            {foodData.description}
          </p>

          {foodData.benefits.map(benefit => <p class="text-justify">{benefit}</p>)}
        </div>

        <!-- Know More Button -->
        {
          foodData.knowMoreLink && (
            <div class="mt-8">
              <a
                class="inline-block rounded-lg bg-orange-500 px-8 py-3 font-semibold uppercase tracking-wider text-white transition-colors duration-300 hover:bg-orange-600"
                href={foodData.knowMoreLink}
              >
                KNOW MORE
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
