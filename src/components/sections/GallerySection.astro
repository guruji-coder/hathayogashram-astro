---
import SectionHeader from "$components/ui/SectionHeader.astro";
import InfiniteCarousel from "$components/ui/InfiniteCarousel.astro";
import MiniCarousel from "$components/ui/MiniCarousel.astro";
import { GALLERY_CAROUSEL_IMAGES, MINI_CAROUSEL_IMAGES } from "$constants/trainingCarouselConstants";

interface Props {
  title?: string;
  subtitle?: string;
  showMiniCarousel?: boolean;
  className?: string;
  id?: string;
}

const { 
  title = "Training Gallery", 
  subtitle = "Experience the Journey",
  showMiniCarousel = true,
  className = "",
  id = "gallery"
} = Astro.props;
---

<section class:list={[`py-16 px-4 relative overflow-hidden`,`${className}`]} id={id}>
  <!-- Floating background decorations -->
  <div class="absolute -top-1/2 -right-1/2 w-full h-full bg-gradient-radial from-purple-500/[0.03] to-transparent animate-float pointer-events-none"></div>
  <div class="absolute -bottom-1/2 -left-1/2 w-full h-full bg-gradient-radial from-orange-500/[0.03] to-transparent animate-float-reverse pointer-events-none"></div>

  <!-- Main Gallery Carousel -->
  <div class="relative z-10 max-w-7xl mx-auto">

    <InfiniteCarousel 
      autoplaySpeed={100}       className="main-gallery rounded-3xl shadow-2xl"       id="main-gallery"       images={GALLERY_CAROUSEL_IMAGES}       pauseOnHover={true}
    />
  </div>

  <!-- Mini Continuous Carousel -->
  {showMiniCarousel && (
    <div class="relative z-10 max-w-full mx-auto mt-2">
      
      <!-- Mini carousel -->
      <MiniCarousel 
        className="mini-1"         height="100px"         images={MINI_CAROUSEL_IMAGES.slice(0, 8)}
      />

    </div>
  )}

  
</section>

<style>
  /* Custom animations for floating elements */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  @keyframes float-reverse {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(-180deg);
    }
  }

  .animate-float {
    animation: float 20s ease-in-out infinite;
  }

  .animate-float-reverse {
    animation: float-reverse 25s ease-in-out infinite;
  }

  /* Custom gradient backgrounds */
  .bg-gradient-radial {
    background-image: radial-gradient(circle, var(--tw-gradient-stops));
  }

  /* Responsive adjustments for mobile */
  @media (max-width: 768px) {
    section {
      padding: 3rem 1rem;
    }
  }

  @media (max-width: 480px) {
    section {
      padding: 2rem 0.5rem;
    }
  }
</style>
